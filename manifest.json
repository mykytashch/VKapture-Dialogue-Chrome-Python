{
  "manifest_version": 2,
  "name": "VK Read Extension 2",
  "version": "1.0",
  "description": "Описание вашего расширения",
  "permissions": [
    "http://localhost:5000/*",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://vk.com/*"],
      "js": ["popup.js"]
    }
  ]
}
